<head>
    <title>{% block title 'Мастерская информационных систем – WISYS.RU' %}</title>

    <meta charset="utf-8">
    <meta name="description" content="">
    <meta name="keywords" content="">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="shortcut icon" href="{{ asset('/favicon.ico') }}"/>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/wsfront/css/main.css') }}" media="screen">
    {% endblock stylesheets %}

    {% block javascripts %}
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    {% endblock javascripts %}
</head>
<body>
{% block body %}
    <div class="wrap clearfix">
        <header>
            {% block header %}
                <div class="grid">
                    <div class="contact">
                        <p><a href="mailto:info@wisys.ru">info@wisys.ru</a></p>
                        <p class="phone"><span class="code">+7 (495)</span> 505-51-47</p>
                    </div>
                    <a href="{{ url('ns_cms_main') }}" class="logo">
                        <img src="{{ asset('bundles/wsfront/images/logo.png') }}" alt="">
                    </a>
                </div>
            {% endblock header %}
        </header>
        {% block content '' %}
    </div>
    <footer>
        {% block footer %}
            <div class="grid">
                <div class="footer-wrap">
                    <span class="footer-logo">
                        <a href="http://neosense.ru/" target="_blank">
                            <img src="{{ asset('bundles/wsfront/images/footer-logo.png') }}" alt="NeoSense">
                        </a>
                    </span>
                    <span class="copyright">© Все права защищены 2009&mdash;{{ 'now'|date('Y') }}<br>ООО «Мастерская информационных систем»</span>

                    <div class="contact">
                        <p><a href="mailto:info@wisys.ru">info@wisys.ru</a></p>
                        <p class="phone"><span class="code">+7 (495)</span> 505-51-47</p>
                    </div>

                </div>
            </div>
        {% endblock footer %}
    </footer>
{% endblock body %}

{% block footscripts %}
    <script src="{{ asset('bundles/wsfront/js/vendor/modernizr.js') }}"></script>
    <!--[if (lt IE 9) & (!IEMobile)]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <script src="{{ asset('bundles/wsfront/js/vendor/selectivizr-min.js') }}"></script>
    <![endif]-->
    <script src="{{ asset('bundles/wsfront/js/vendor/jquery.easyModal.js') }}"></script>
    <script src="{{ asset('bundles/wsfront/js/script.js') }}"></script>
{% endblock %}
</body>
</html>
